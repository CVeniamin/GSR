ip addr add dev eth0 10.0.0.10/29
ip link set dev eth0 up
route add default gw 10.0.0.9 eth0

# Mail
chmod a+w /var/spool/mail
chmod go-rw /etc/exim4/exim4.conf

chown -R $USER:$USER /var/www/bomcliente.gsr/public_html
chmod -R 755 /var/www/

adduser --disabled-password --gecos "" info
echo 'info:info' | chpasswd

# DNS
/etc/init.d/bind start

/etc/init.d/exim4 start
/etc/init.d/inetd start

# Web
a2ensite bomcliente.gsr.conf

/etc/init.d/apache2 restart
